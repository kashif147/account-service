          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/docs",
              "host": ["{{base_url}}"],
              "path": ["api", "docs"]
            }
          }
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Debug: Log that script is running",
          "console.log('Pre-request script executing...');",
          "",
          "// Set API key header if available (alternative to JWT)",
          "const apiKey = pm.environment.get('api_key');",
          "if (apiKey) {",
          "    console.log('Using API key authentication');",
          "    pm.request.headers.upsert({",
          "        key: 'x-api-key',",
          "        value: apiKey",
          "    });",
          "    // Remove Authorization header if using API key",
          "    pm.request.headers.remove('Authorization');",
          "} else {",
          "    console.log('Using JWT token authentication');",
          "}",
          "",
          "// Log current headers for debugging",
          "console.log('Final headers:', pm.request.headers.all());"
        ]
      }
    }
  ]
}
