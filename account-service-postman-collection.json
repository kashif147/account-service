{
  "info": {
    "name": "Account Service API",
    "description": "Complete API collection for the Account Service with all endpoints including health checks, journal operations, reports, and admin functions.",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userServiceUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Get Token from User Service",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"your-password\"\n}"
            },
            "url": {
              "raw": "{{userServiceUrl}}/auth/login",
              "host": ["{{userServiceUrl}}"],
              "path": ["auth", "login"]
            },
            "description": "Get JWT token from your user service. Replace userServiceUrl with your actual user service URL."
          }
        },
        {
          "name": "Test Token",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/user-plus",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "user-plus"]
            },
            "description": "Test if your token is valid by accessing a protected endpoint"
          }
        }
      ]
    },
    {
      "item": [
        {
          "name": "Root - Service Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/",
              "host": ["{{baseUrl}}"],
              "path": [""]
            },
            "description": "Get service information and available endpoints"
          }
        },
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
