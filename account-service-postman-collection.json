            "url": {
              "raw": "{{baseUrl}}/ready",
              "host": ["{{baseUrl}}"],
              "path": ["ready"]
            },
            "description": "Service readiness check"
          }
        },
        {
          "name": "Idempotency Health",
          "request": {
            "method": "GET",
            "header": [],
