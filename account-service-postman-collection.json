          }
        },
        {
          "name": "User Plus Access",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/admin/user-plus",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "user-plus"]
            },
            "description": "User or higher access endpoint"
          }
        }
      ]
    },
    {
      "name": "Journal Operations",
      "item": [
        {
          "name": "List Journals",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/journal?from=2024-01-01&to=2024-12-31&docType=Invoice&memberId=123&limit=50&skip=0",
              "host": ["{{baseUrl}}"],
              "path": ["api", "journal"],
              "query": [
                {
                  "key": "from",
                  "value": "2024-01-01",
                  "description": "Start date (ISO format)"
                },
                {
                  "key": "to",
                  "value": "2024-12-31",
                  "description": "End date (ISO format)"
                },
                {
                  "key": "docType",
                  "value": "Invoice",
                  "description": "Document type filter"
                },
                {
                  "key": "memberId",
                  "value": "123",
                  "description": "Member ID filter"
                },
                {
                  "key": "limit",
                  "value": "50",
                  "description": "Page size (1-500)"
                },
                {
                  "key": "skip",
                  "value": "0",
                  "description": "Skip records for pagination"
                }
              ]
            },
            "description": "List journal entries with optional filters (requires User+ role)"
          }
        },
        {
          "name": "Create Invoice",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Idempotency-Key",
                "value": "{{$guid}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"date\": \"2024-01-15\",\n  \"docNo\": \"INV-2024-001\",\n  \"memberId\": \"M123\",\n  \"annualFee\": 500.00,\n  \"incomeCode\": \"4000\",\n  \"categoryName\": \"General All Grades\",\n  \"periodBucket\": \"current\",\n  \"joinDate\": \"2024-01-15\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/journal/invoice",
              "host": ["{{baseUrl}}"],
              "path": ["api", "journal", "invoice"]
            },
            "description": "Create an invoice with optional pro-rata calculation (requires User+ role)"
          }
        },
