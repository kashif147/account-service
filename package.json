{
  "name": "accounts-service",
  "version": "1.0.0",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon --watch src --ext js,json --exec node src/server.js",
    "start": "node src/server.js",
    "start:dev": "cross-env NODE_ENV=development node src/server.js",
    "start:staging": "cross-env NODE_ENV=staging node src/server.js",
    "start:prod": "cross-env NODE_ENV=production node src/server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "seed:coa": "node src/seed/coa.seed.js"
  },
  "dependencies": {
    "amqplib": "^0.10.4",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv-flow": "^3.3.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "mongoose": "^8.6.0",
    "pino": "^9.2.0",
    "pino-http": "^10.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "jest": "^29.7.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.1",
    "pino-pretty": "^13.1.1",
    "supertest": "^7.1.4"
  }
}
